#:kivy 2.3.0
#:import MDFillRoundFlatButton kivymd.uix.button.MDFillRoundFlatButton
#:import CircleProgressBar components.circle_progress_bar.CircleProgressBar

<TimerWidget>:
    cols: 1
    rows: 3
    padding: 10
    spacing: 10

    BoxLayout:  # First row
        size_hint_y: None
        height: root.height / 3  # Each row takes even space
        Widget:  # Empty widget for even spacing
            size_hint_x: None
            width: 0

    BoxLayout:  # BoxLayout for the second row
        orientation: 'vertical'
        size_hint_y: None
        height: 550

        CircleProgressBar:  # CircleProgressBar centered
            id: progress_bar
            size_hint: None, None
            size: 550, 550
            pos_hint: {'center_x': 0.5}

    BoxLayout:
        size_hint_y: None
        height: root.height / 3

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            BoxLayout:
                orientation: 'horizontal'
                size_hint: None, None
                size: self.minimum_size  # Adjust the size to fit the buttons
                spacing: dp(35)  # Adds 10dp spacing between children

                MDFillRoundFlatButton:
                    id: start_button
                    md_bg_color: root.primary_color
                    text: 'Start'
                    font_size: '20sp'
                    on_press: root.toggle_timer()
                
                MDFillRoundFlatButton:
                    id: skip_button
                    md_bg_color: root.primary_color
                    text: "Skip"
                    disabled: root.skip_disabled
                    icon: 'magnify'
                    font_size: '20sp'
                    on_press: root.skip_timer()

    