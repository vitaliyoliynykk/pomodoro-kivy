#:kivy 2.3.0
#:import MDFillRoundFlatButton kivymd.uix.button.MDFillRoundFlatButton
#:import CircleProgressBar components.circle_progress_bar.CircleProgressBar
#:import Statistics components.statistics.Statistics

<TimerWidget>:
    cols: 1
    rows: 3
    padding: 10
    spacing: 10

    BoxLayout:  # First row
        size_hint_y: None
        height: root.height / 3  # Each row takes even space
        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            Statistics:
                id: statistics

    BoxLayout:  # BoxLayout for the second row
        orientation: 'vertical'
        size_hint_y: None
        height: 550

        CircleProgressBar:  # CircleProgressBar centered
            id: progress_bar
            size_hint: None, None
            size: 550, 550
            pos_hint: {'center_x': 0.5}

    BoxLayout: # BoxLayout for the third row (Buttons)
        size_hint_y: None
        height: root.height / 3

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'center'

            BoxLayout:
                orientation: 'horizontal'
                size_hint: None, None
                size: self.minimum_size
                spacing: dp(35)

                MDFillRoundFlatButton:
                    id: start_button
                    md_bg_color: root.primary_color
                    text: 'Start'
                    font_size: '34sp'
                    on_press: root.toggle_timer()
                
                MDFillRoundFlatButton:
                    id: skip_button
                    md_bg_color: root.primary_color
                    text: "Skip"
                    disabled: root.skip_disabled
                    font_size: '34sp'
                    on_press: root.skip_timer()

    