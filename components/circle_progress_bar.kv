#:kivy 2.3.0

<CircleProgressBar>:
    canvas.before:
        Color:
            rgba: root.bar_color + [0.35]
        Line:
            width: root.bar_width
            ellipse: (self.x, self.y, self.width, self.height, 0, 360)
    canvas.after:
        Color:
            rgb: root.bar_color 
        Line:
            width: root.bar_width
            ellipse: (self.x, self.y, self.width, self.height, 0, root.progress*3.6)
    MDLabel:
        text: root.status_text
        font_size: '60sp'
        pos_hint: {'center_x': 0.5, 'center_y': 0.5}  # Centered in layout
        halign: 'center'
        color: root.bar_color

        