#:kivy 2.3.0

<GoalDialogContent>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "120dp"

    MDTextField:
        id: goal_input
        hint_text: "Your goal"
        helper_text_mode: "on_error"
        helper_text: "This field is required"

    MDTextField:
        id: number_input
        hint_text: "Number of pomodoros"
        input_filter: 'int'
        helper_text_mode: "on_error"
        helper_text: "This field is required"

<SettingsDialogContent>
    orientation: "vertical"
    spacing: "12dp"
    size_hint_y: None
    height: "200dp"

    MDTextField:
        id: focus_input
        input_filter: 'int'
        hint_text: "Focus time"
        helper_text_mode: "on_error"
        helper_text: "This field is required"

    MDTextField:
        id: rest_input
        input_filter: 'int'
        hint_text: "Rest time"
        helper_text_mode: "on_error"
        helper_text: "This field is required"

    MDTextField:
        id: long_rest_input
        input_filter: 'int'
        hint_text: "Long rest time"
        helper_text_mode: "on_error"
        helper_text: "This field is required"


<Statistics>:
    BoxLayout:
        orientation: 'vertical'
        size_hint_x: 1
        size_hint_y: None
        spacing: 100

        MDFillRoundFlatButton:
            id: button
            md_bg_color: root.secondary_color
            text: "Menu"
            pos_hint: {"center_x": 0.1}
            on_release: root.menu.open()

        MDLabel:
            halign: 'center'
            text: root.title
            font_size: '44sp'
            theme_text_color: "Custom"
            text_color: root.primary_color
        MDLabel:
            halign: 'center'
            text: root.completed_label
            font_size: '20sp'
            theme_text_color: "Custom"
            text_color: root.secondary_color
            opacity: 1 if root.goal_visible else 0




